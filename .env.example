# ===========================================
# LinkedIn MCP Server Configuration
# ===========================================
# Copy this file to .env and fill in your values

# LinkedIn Credentials (Required)
# Use a secondary LinkedIn account for safety
LINKEDIN_EMAIL=your-email@example.com
LINKEDIN_PASSWORD=your-secure-password

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./data/linkedin_mcp.db
DATABASE_ECHO=false

# Server Configuration
MCP_SERVER_NAME=LinkedIn Intelligence MCP
MCP_SERVER_VERSION=0.1.0
MCP_TRANSPORT=stdio
MCP_HOST=127.0.0.1
MCP_PORT=8000

# Scheduler Configuration
SCHEDULER_ENABLED=true
SCHEDULER_TIMEZONE=UTC
SCHEDULER_MAX_INSTANCES=3

# Browser Automation Configuration
BROWSER_HEADLESS=true
BROWSER_TIMEOUT=30000
BROWSER_USER_DATA_DIR=./data/browser_data
BROWSER_SLOWMO=0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=./logs/linkedin_mcp.log

# Rate Limiting (requests per minute)
RATE_LIMIT_REQUESTS_PER_MINUTE=30
RATE_LIMIT_BURST=10

# Feature Flags
FEATURE_BROWSER_FALLBACK=true
FEATURE_ANALYTICS_TRACKING=true
FEATURE_POST_SCHEDULING=true

# Security
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your-fernet-encryption-key-here
SESSION_COOKIE_PATH=./data/session_cookies.json
